<div class="container-fluid col-md-5 search-item rounded ">
	<div class="row ">
		<div class=" col-md-12   ml-auto">
			<h2> <%= link_to student.name, student %> </h2>
		</div>

		<div class="col-md-6 ">

			<%= image_tag(student.propic.url, :class => "img-fluid rounded-circle", :size => "250x250")  %>
		</div>

		<div class="col-md-6">
		<h4> Student  </h4>
			<p class="xl"> 
					<i class="fa fa-graduation-cap" aria-hidden="true"></i>
					<%= student.school %> 
				</p>
				<p class="xl" >
				GPA: 
				<%= student.gpa %>
				</p>
				<p class="xl">
					<i class="fa fa-globe" aria-hidden="true"></i>
					United States
				</p>

		</div>
	</div>	



</div>
