<div class="container-fluid" >
<h3> Members directory </h3>
<%= form_tag("/search/", method: "get") do %>
  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag(:name) %>
  <% if !user_signed_in? %>
	<%= label_tag(:type, "Account search") %>
	<%= select_tag(:type, options_for_select(["Recruiter","Student"],"Student")) %>	
  <% end %>

  <% if @view_type == "Recruiter" %>
  	<%= label_tag(:gpa, "Minimum GPA") %>
  	<%= number_field_tag(:gpa, class: :text_field, step: :any, maximum: 4.3) %>
  <% end %>

  <%= submit_tag("Search") %>
<% end %>
<ul>
<% @users.each do |user| %>
	<li><%= link_to  user.meta.name , user.meta %></li>

<% end %>
</ul>

</div>